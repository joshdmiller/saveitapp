# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# API: users
GET     /users/:id                  controllers.Application.get_user(id: Long) 

# API: items
GET     /users/:userid/items        controllers.Application.get_items(userid: Long)
GET     /users/:user_id/items/:id   controllers.Application.get_item(user_id: Long, id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
